<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_answer"
        android:layout_marginHorizontal="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/ly_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="40dp"
                android:layout_height="50dp"

                android:layout_marginRight="10dp">

            </ImageView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profile"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Hari Kesuma">

            </TextView>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/11/2019"
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true">
            </TextView>


            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profile"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:text="jawabanya ada di ujung langit kita kesana dengan seorang anak anak yang pemberani"
                android:layout_below="@+id/tv_name">
            </TextView>

            <TextView
                android:id="@+id/tv_like"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ib_like"
                android:layout_below="@id/tv_answer"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="10">

            </TextView>

            <ImageButton
                android:id="@+id/ib_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like"
                android:layout_below="@id/tv_answer"
                android:layout_alignRight="@id/tv_date"
                android:layout_marginRight="10dp"
                android:background="#fff">

            </ImageButton>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>